@model BulkyBook.Model.Models.CoverType
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Edit CoverType";
}

<form method="post" class="container border p-4">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row">
        @if(Model.Id == 0)
        {
            title = "Create CoverType";
        }
        <h2>@title</h2>
    </div>
    <hr />
    <div class="row">
        <div class="col-4">
            <label asp-for="Name"></label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Name" placeholder="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="col-4 offset-4 form-group mt-2">
        @if(Model.Id == 0){
         <partial name="_CreateAndBack" />
            }
            else
            {
                <partial name="_EditAndBack" model="Model.Id" />
            }
    </div>
</form>

@section scripts{ 
<partial name="_ValidationScriptsPartial" />
}