@model BulkyBook.Model.Models.Company
@{
    var title = "Create Company";
}

<form class="container border p-4" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row border-bottom">
        @if(Model.Id != 0)
        {
            title = "Edit Company";
        }
         <h1 class="text-primary">@title</h1>
    </div>
    <div class="col-8 mt-3">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" placeholder="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="StreetAddress"></label>
            </div>
            <div class="col-4">
                <input asp-for="StreetAddress" class="form-control" placeholder="Street Address"/>
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="City"></label>
            </div>
            <div class="col-4">
                <input asp-for="City" class="form-control" placeholder="City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="State"></label>
            </div>
            <div class="col-4">
                <input asp-for="State" class="form-control" placeholder="State" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="PostalCode"></label>
            </div>
            <div class="col-4">
                <input asp-for="PostalCode" class="form-control" placeholder="Postal Code"/>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-4">
                <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="IsAuthorized"></label>
            </div>
            <div class="col-4">
                <input type="checkbox" asp-for="IsAuthorized" class="form-control" />
                <span asp-validation-for="IsAuthorized" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-4 offset-4">
                <div class="row form-group">
                    @if (Model.Id == 0)
                    {
                        <partial name="_CreateAndBack" />
                    }
                    else
                    {
                        <partial name="_EditAndBack" model="Model.Id" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>


@section scripts{
                <partial name="_ValidationScriptsPartial" />
            }